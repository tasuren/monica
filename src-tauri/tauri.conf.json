{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Monica",
    "version": "0.1.0-beta",
    "identifier": "monica.tasuren.jp",
    "build": {
        "beforeDevCommand": "bun run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Monica",
                "width": 350,
                "height": 60,
                "alwaysOnTop": true,
                "titleBarStyle": "Overlay",
                "hiddenTitle": true,
                "decorations": false,
                "maximizable": false,
                "minimizable": false,
                "closable": false,
                "transparent": true,
                "acceptFirstMouse": true,
                "windowEffects": {
                    "radius": 5,
                    "effects": ["mica", "tooltip"]
                }
            }
        ],
        "security": {
            "csp": null
        },
        "macOSPrivateApi": true
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "copyright": "(c) 2025 Takagi Tasuku",
        "shortDescription": "Simple on-screen annotation software",
        "category": "Productivity",
        "licenseFile": "../LICENSE",
        "publisher": "Takagi Tasuku",
        "homepage": "https://monica.tasuren.jp/",
        "icon": [
            "icons/macos/32x32.png",
            "icons/macos/128x128.png",
            "icons/macos/128x128@2x.png",
            "icons/macos/icon.icns",
            "icons/icon.ico"
        ]
    }
}
