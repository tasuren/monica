{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Monica",
    "version": "0.1.0",
    "identifier": "monica.tasuren.jp",
    "build": {
        "beforeDevCommand": "bun run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Monica",
                "width": 250,
                "height": 100,
                "alwaysOnTop": true
            }
        ],
        "security": {
            "csp": null
        },
        "macOSPrivateApi": true
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
